    #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4#exampleModalLabel.modal-title 添加用户
          .modal-body
            form(action='/userlist', method='get', onsubmit="return addData();")
              .form-group
                label.control-label(for='recipient-name') 姓名:
                input#recipient-name.form-control.addData(type='text', name='name')
              .form-group
                label.control-label(for='message-text') 职业:
                input#recipient-name.form-control(type='text', name='profession')
              .form-group
                label.control-label(for='message-text') 年龄:
                input#recipient-name.form-control(type='text', name='age')
              .form-group
                label.control-label(for='message-text') 借阅时间:
                input#recipient-name.form-control(type='text', name='time')
              .form-group
                label.control-label(for='message-text') 书名:
                input#recipient-name.form-control(type='text', name='bookName')
              .form-group
                label.control-label(for='message-text') 归还时间:
                input#recipient-name.form-control(type='text', name='returnTime')
              .modal-footer
                input.btn.btn-default(type='submit', value='添加')
    #exampleModal2.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4#exampleModalLabel.modal-title 添加书籍
          .modal-body
            form(action='/booklist', method='get' onsubmit="return addData2();")
              .form-group
                label.control-label(for='recipient-name') ISBN:
                input#recipient-name.form-control.addData2(type='text', name='isbn')
              .form-group
                label.control-label(for='message-text') 书名:
                input#recipient-name.form-control(type='text', name='bookName')
              .form-group
                label.control-label(for='message-text') 价格:
                input#recipient-name.form-control(type='text', name='cost')
              .form-group
                label.control-label(for='message-text') 类别:
                input#recipient-name.form-control(type='text', name='classes')
              .form-group
                label.control-label(for='message-text') 作者:
                input#recipient-name.form-control(type='text', name='writer')
              .form-group
                label.control-label(for='message-text') 出版社:
                input#recipient-name.form-control(type='text', name='press')
              .modal-footer
                input.btn.btn-default(type='submit', value='添加')
    script.

  head
    meta(charset='UTF-8')
    title login
    // 新 Bootstrap 核心 CSS 文件
    link(rel='stylesheet', href='bootstrap.min.css')
    link(rel='stylesheet', href='head_item.css')
    script(src='jquery-1.11.1.js')
    // 最新的 Bootstrap 核心 JavaScript 文件
    script(src='bootstrap.min.js')
  body
    .head_item
      .headbox
        ul.head_nav
          a(href='/userlist')
            li.list1 用户列表
          a(href='/booklist')
            li.list2 书籍列表
          a(href='')
